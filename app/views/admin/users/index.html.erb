<div class="row row-offcanvas row-offcanvas-right">
  <div class="col-xs-12 col-sm-9">
    <%= render '/shared/offcanvas' %>
    <%= render '/shared/page_header', title: t('.manage_user') %>
    <table class="table">
      <thead>
        <tr>
          <th><%= t('.username') %></th>
          <th><%= t('.email') %></th>
          <th><%= t('.role') %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td  class="col-sm-4"><%= link_to t('.edit'), edit_admin_user_path(user), class: 'btn btn-default' %>
            <%= link_to t('.destroy'), admin_user_path(user), method: :delete, data: { confirm: t('are_you_sure?') }, class: 'btn btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @users %>
  </div><!--/span-->
  <%= render '/admin/navigation', active: 'users' %>
</div><!--/row-->
