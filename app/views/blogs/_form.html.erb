<%= form_for @blog, url: @blog.new_record? ? blogs_path(username: current_user.username) : blog_path(@blog, username: @blog.username), html: { class: 'form-horizontal', role: 'form' } do |f| %>
  <%= render '/shared/error_message', record: @blog %>
  <div class="form-group">
    <%= f.label :raw_title, class: 'col-sm-2 control-label' %>
    <div class="col-sm-8">
      <%= f.text_field :raw_title, class: 'form-control', placeholder: t('.raw_title'), required: 'required' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :raw_body, class: 'col-sm-2 control-label' %>
    <div class="col-sm-8">
      <%= f.text_area :raw_body, rows: '15', class: 'form-control', placeholder: t('.raw_body'), required: 'required' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <%= f.submit t(action_name), class: 'btn btn-primary form-control' %>
    </div>
  </div>
<% end %>
