<div class="row row-offcanvas row-offcanvas-right">
  <div class="col-sm-6 col-sm-offset-3">
    <%= render '/shared/page_header', title: t('.reset_password') %>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal', role: 'form' }) do |f| %>
      <%= render '/shared/error_message', record: resource %>
      <div class="form-group">
        <%= f.label :email, class: 'col-sm-2 control-label' %>
        <div class="col-sm-8">
          <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: :email, required: 'required' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-6">
          <%= f.submit t('.send_me_reset_password_mail'), class: 'btn btn-primary form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-6">
          <%= render 'devise/shared/links' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
