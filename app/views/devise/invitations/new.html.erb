<div class="row row-offcanvas row-offcanvas-right">
  <div class="col-xs-12 col-sm-9">
    <%= render '/shared/offcanvas' %>
    <%= render '/shared/page_header', title: t('.add_user') %>
    <%= form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post, class: 'form-horizontal', role: 'form'  } do |f| %>
      <%= render '/shared/error_message', record: resource %>
      <% resource.class.invite_key_fields.each do |field| -%>
        <div class="form-group">
          <%= f.label field, class: 'col-sm-2 control-label' %>
          <div class="col-sm-8">
            <%= f.text_field field, class: 'form-control', placeholder: field, required: 'required' %>
          </div>
        </div>
      <% end -%>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-6">
          <%= f.submit t('.send_invitation_mail'), class: 'btn btn-primary form-control' %>
        </div>
      </div>
    <% end %>
  </div><!--/span-->
  <%= render '/admin/navigation', active: 'send_invitation' %>
</div><!--/row-->
