<%= form_for @user, url: admin_user_path(@user), html: { class: 'form-horizontal', role: 'form', method: :put } do |f| %>
  <%= render '/shared/error_message', record: @user %>
  <div class="form-group">
    <%= f.label :username, class: 'col-sm-2 control-label' %>
    <div class="col-sm-8">
      <%= f.text_field :username, class: 'form-control', placeholder: t('.username'), required: 'required' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: 'col-sm-2 control-label' %>
    <div class="col-sm-8">
      <%= f.text_field :email, class: 'form-control', placeholder: t('.email'), required: 'required' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :role, class: 'col-sm-2 control-label' %>
    <div class="col-sm-8">
      <%= f.text_field :role, class: 'form-control', placeholder: t('.role'), required: 'required' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <%= f.submit t('update'), class: 'btn btn-primary form-control' %>
    </div>
  </div>
<% end %>
