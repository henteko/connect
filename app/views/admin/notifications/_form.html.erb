<%= form_for @notification, url: admin_notification_path, html: { class: 'form-horizontal', role: 'form', method: :put } do |f| %>
  <%= render '/shared/error_message', record: @notification %>
  <div class="form-group">
    <%= f.label :room_name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-8">
      <%= f.text_field :room_name, class: 'form-control', placeholder: t('.room_name'), required: 'required' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :token, class: 'col-sm-2 control-label' %>
    <div class="col-sm-8">
      <%= f.text_field :token, class: 'form-control', placeholder: t('.token'), required: 'required' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2">
      <%= f.check_box :active %>
      <%= f.label :active %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <%= f.submit t('update'), class: 'btn btn-primary form-control' %>
    </div>
  </div>
<% end %>
